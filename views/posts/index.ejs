<% layout('layouts/boilerplate') -%>

<h1>All Posts</h1>

<% posts.forEach( (post) => { %>
    <div>
        <h2><%= post.title %></h2>
        <p>$<%= post.price %></p>
        <p><%= post.description %></p>
        <p><%= post.image %></p>
        <p><%= post.location %></p>

        <a href="/posts/<%= post.id %>">View more</a>
    </div>
<% }); %>
